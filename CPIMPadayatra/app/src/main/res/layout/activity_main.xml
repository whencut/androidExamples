<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="false"
    android:paddingBottom="50dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <android.support.v4.view.ViewPager

            android:id="@+id/pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:fitsSystemWindows="true"
            tools:listitem="@layout/pager_item" />
        <LinearLayout
            android:layout_height="55dp"
            android:layout_marginTop="120dp"
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_news"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/homehead"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="News"
            android:textSize="@dimen/home_text"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"/>
<TextView
    android:layout_width="1dp"
    android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_images"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/homehead"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="Images"
            android:textSize="@dimen/home_text"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_videos"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/homehead"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="Videos"
            android:textSize="@dimen/home_text"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/homehead"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="map"
            android:textSize="@dimen/home_text"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal|center_vertical"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="25dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
                card_view:cardCornerRadius="50dp"
                card_view:cardPreventCornerOverlap = "false"
                card_view:cardElevation="10dp"
                android:layout_gravity="center_horizontal|center_vertical">
<TextView
    android:id="@+id/tv_upcomingevents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:text="Upcoming Events"
    android:textColor="@color/white"
    android:gravity="center"
    android:textStyle="bold|italic" />
            </android.support.v7.widget.CardView>  </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="50dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:id="@+id/tv_pastevents"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text="Past Events"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold|italic" />
                </android.support.v7.widget.CardView>  </LinearLayout>

        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="50dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:id="@+id/tv_Objectives"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text="Objectives"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold|italic" />
                </android.support.v7.widget.CardView>  </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="50dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:id="@+id/tv_leaders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text="Leaders"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold|italic" />
                </android.support.v7.widget.CardView>  </LinearLayout>

        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="50dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text="Signup"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold|italic" />
                </android.support.v7.widget.CardView>  </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_width="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="25dp"
                    card_view:cardBackgroundColor="@color/colorPrimary"
                    card_view:cardCornerRadius="50dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="10dp"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <TextView
                        android:id="@+id/tv_suggestions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:text="Sugessions"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold|italic" />
                </android.support.v7.widget.CardView>  </LinearLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>
</ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
</RelativeLayout>