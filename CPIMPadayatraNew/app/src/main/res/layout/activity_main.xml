<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <android.support.v4.view.ViewPager

                    android:id="@+id/pager_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:fitsSystemWindows="true"
                    tools:listitem="@layout/pager_item" />
                <LinearLayout
                    android:layout_height="55dp"
                    android:layout_marginTop="120dp"
                    android:id="@+id/viewPagerCountDots"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_news"
                    android:layout_margin="4dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/top_button_selection"
                    android:text="News"
                    android:textSize="@dimen/home_text"

                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/tv_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/top_button_selection"
                    android:text="Images"
                    android:textSize="@dimen/home_text"

                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/tv_videos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/top_button_selection"
                    android:text="Videos"
                    android:textSize="@dimen/home_text"

                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:layout_margin="4dp"
                    android:id="@+id/tv_map"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/top_button_selection"
                    android:text="Schedule"
                    android:textSize="@dimen/home_text"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"/>
            </LinearLayout>

            <TextView
                android:text="భద్రాచలం, జనగామ జిల్లాలను ఏర్పాటు చేయాలి - ముసాయిదాలో మార్పులపై సీఎంకు సీపీఐ(ఎం) లేఖ"
                android:id="@+id/tv_scroll_news"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:focusable="true"
                android:textColor="#795548"
                android:textSize="18sp"
                android:shadowColor="#A000"
                android:shadowDx="0.6"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:focusableInTouchMode="true"
                android:freezesText="true"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="5dp"
                android:layout_gravity="center_horizontal|center_vertical">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:background="#607D8B"
                        android:layout_height="2dp" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- Row1 Start -->
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivUpcomingEvents"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_upcomming_events"
                                    android:background="@drawable/button_selection_bg1"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#00000000"
                                    android:text="Updates"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="0"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:background="#E0E0E0"
                                android:layout_width="1dp">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivPastEvents"
                                    android:layout_margin="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/past_events"
                                    android:background="@drawable/button_selection_bg1"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="Route Map"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <!-- Row1 End -->
                        <!-- Line1 Start -->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                                <View
                                    android:layout_width="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="#E0E0E0"
                                    android:layout_height="1dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="0"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                                <View
                                    android:layout_width="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="#E0E0E0"
                                    android:layout_height="1dp"/>
                            </RelativeLayout>
                        </TableRow>
                        <!-- Line1 End -->
                        <!-- Row2 Start -->
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivObjectives"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_obectives"
                                    android:background="@drawable/button_selection_bg1"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#00000000"
                                    android:text="About"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="0"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:background="#E0E0E0"
                                android:layout_width="1dp">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivLeader"
                                    android:layout_margin="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_leaders"
                                    android:background="@drawable/button_selection_bg1"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="Leaders"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <!-- Row2 End -->

                    </TableLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:background="#795548"
                android:layout_height="1dp" />
            <TextView
                android:textColor="@color/colorPrimary"
                android:text="Communication"
                android:paddingLeft="16dp"
                android:textSize="18sp"
                android:paddingTop="8dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="5dp"
                android:layout_gravity="center_horizontal|center_vertical">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:background="#607D8B"
                        android:layout_height="2dp" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!-- Row1 Start -->
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivGetInTouch"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_getin_touch"
                                    android:background="@drawable/button_selection_bg"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#00000000"
                                    android:text="Join With Us"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="0"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:background="#E0E0E0"
                                android:layout_width="1dp">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivFeedback"
                                    android:layout_margin="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_feedback"
                                    android:background="@drawable/button_selection_bg"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="Feedback"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </TableRow>
                        <!-- Row1 End -->
                        <!-- Line1 Start -->
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_margin="8dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                                <View
                                    android:layout_width="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="#E0E0E0"
                                    android:layout_height="1dp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="0"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content">
                                <View
                                    android:layout_width="100dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="#E0E0E0"
                                    android:layout_height="1dp"/>
                            </RelativeLayout>
                        </TableRow>
                        <!-- Line1 End -->
                        <!-- Row2 Start -->
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivFacebook"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/ic_facebook"
                                    android:background="@drawable/button_selection_bg"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#00000000"
                                    android:text="Facebook"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="0"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:background="#E0E0E0"
                                android:layout_width="1dp">
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_width="wrap_content">
                                <ImageButton
                                    android:id="@+id/ivLogin"
                                    android:layout_margin="8dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_login"
                                    android:background="@drawable/button_selection_bg"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp" />
                                <TextView
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#00000000"
                                    android:text="Admin Login"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/txt_color"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </TableRow>


                    </TableLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>



            <TableLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_upcomingevents"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Upcoming Events"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_pastevents"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Past Events"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>

                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_Objectives"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Objectives"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_leaders"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Leaders"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>

                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_signup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Join With Us"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_width="wrap_content">

                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="25dp"
                            card_view:cardBackgroundColor="@color/colorPrimary"
                            card_view:cardCornerRadius="50dp"
                            card_view:cardPreventCornerOverlap = "false"
                            card_view:cardElevation="10dp"
                            android:layout_gravity="center_horizontal|center_vertical">
                            <TextView
                                android:id="@+id/tv_suggestions"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:text="Sugessions"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold|italic" />
                        </android.support.v7.widget.CardView>  </LinearLayout>

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
</RelativeLayout>